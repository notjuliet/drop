{
  "name": "drop",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build:css": "bunx @tailwindcss/cli -i src/styles.css -o public/style.css --minify",
    "dev": "bunx @tailwindcss/cli -i src/styles.css -o public/style.css --watch & bun run --hot src/index.ts",
    "start": "bun run build:css && bun run src/index.ts"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.2.1",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "hono": "^4.12.3"
  }
}
